<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".FilterActivity">

    <androidx.cardview.widget.CardView
        android:id="@+id/details_card_filter"
        android:layout_width="match_parent"
        android:layout_height="450dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="30dp"
        android:scrollbars="vertical"
        app:cardCornerRadius="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/comp_name"
        app:layout_constraintVertical_bias="1.0">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/art"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Art der Stelle"
                    android:textSize="15sp" />

                <CheckBox
                    android:id="@+id/stelle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Stelle"
                    android:textSize="10sp" />

                <CheckBox
                    android:id="@+id/praktikum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Praktikum/ Referendariat"
                    android:textSize="10sp" />

                <CheckBox
                    android:id="@+id/studienplatz"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Studienplatz/ Werkstudent"
                    android:textSize="10sp" />

                <CheckBox
                    android:id="@+id/abschlussarbeit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Abschlussarbeit"
                    android:textSize="10sp" />

                <CheckBox
                    android:id="@+id/traineestelle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Traineestelle"
                    android:textSize="10sp" />

                <TextView
                    android:id="@+id/bundesland"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Bundesland"
                    android:textSize="15sp" />

                <CheckBox
                    android:id="@+id/Sachsen"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sachsen"
                    android:textSize="10sp" />

                <CheckBox
                    android:id="@+id/Bayern"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bayern"
                    android:textSize="10sp"
                    tools:ignore="DuplicateIds" />

                <CheckBox
                    android:id="@+id/Deutschland"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Deutschland"
                    android:textSize="10sp" />

                <CheckBox
                    android:id="@+id/Thüringen"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Thüringen"
                    android:textSize="10sp" />

                <CheckBox
                    android:id="@+id/Baden"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Baden-Württemberg"
                    android:textSize="10sp" />

                <CheckBox
                    android:id="@+id/SachsenA"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sachsen-Anhalt"
                    android:textSize="10sp" />

                <CheckBox
                    android:id="@+id/hessen"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hessen"
                    android:textSize="10sp" />

                <TextView
                    android:id="@+id/berufsfeld"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Berusfeld"
                    android:textSize="15sp" />

                <CheckBox
                    android:id="@+id/ingenieurswissenschaften"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ingenieurswissenschaften"
                    android:textSize="10sp" />

                <CheckBox
                    android:id="@+id/it"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="IT / Telekommunikation"
                    android:textSize="10sp" />

                <CheckBox
                    android:id="@+id/elektronik"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Elektronik, Elektrotechnik"
                    android:textSize="10sp" />

                <CheckBox
                    android:id="@+id/informatik"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Informatik"
                    android:textSize="10sp" />

                <CheckBox
                    android:id="@+id/metal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Metall, Maschinenbau"
                    android:textSize="10sp" />

                <CheckBox
                    android:id="@+id/wirtschaftswissenschaften"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Wirtschaftswissenschaften"
                    android:textSize="10sp" />

                <CheckBox
                    android:id="@+id/beratung"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Beratung / Consulting"
                    android:textSize="10sp" />

            </LinearLayout>
        </ScrollView>
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginBottom="100dp"
        android:orientation="horizontal">

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/floatingActionButton4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginLeft="30dp"
            android:layout_weight="1"
            android:clickable="true"
            android:focusable="true"
            app:backgroundTint="#FDD41212"
            app:srcCompat="@drawable/ic_clear_black_24dp"
            tools:ignore="VectorDrawableCompat" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/floatingActionButton2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="220dp"
            android:layout_marginLeft="220dp"
            android:layout_weight="1"
            android:clickable="true"
            android:focusable="true"
            app:backgroundTint="#4CAF50"
            app:srcCompat="@drawable/ic_check_black_24dp"
            tools:ignore="VectorDrawableCompat" />
    </LinearLayout>


</LinearLayout>